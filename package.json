{
  "name": "trainstagram",
  "version": "1.0.0",
  "description": "a feed based social media featuring trains, exclusively",
  "main": "backend/src/app.ts",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "mkdir -p ./dist && cp .env ./dist/.env",
    "start": "tsc && node ./dist/src/app.js",
    "start:dev": "nodemon --exec 'npm run start'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willacharlotte/trainstagram.git"
  },
  "author": "Willa Charlotte Lyle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/willacharlotte/trainstagram/issues"
  },
  "homepage": "https://github.com/willacharlotte/trainstagram#readme",
  "nodemonConfig": {
    "watch": [
      "./backend/",
      "./frontend/"
    ],
    "ext": "*",
    "delay": 2000
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mssql": "^9.1.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/ms": "^0.7.31",
    "@types/mssql": "^8.1.2",
    "nodemon": "^3.0.1"
  }
}
